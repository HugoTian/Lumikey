<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >
         
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="key Infomation"
            android:textSize="28sp"
            android:textColor="@color/white" />
        
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="Camera Status"
            android:textSize="21sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cameraStatus"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="1.37"
            android:text="Available"
            android:textSize="21sp"
            android:textColor="@color/white" />
        
       </LinearLayout>
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="Torch Mode"
            android:textSize="21sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/Torch_Mode"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="0.96"
            android:text="Off"
            android:textSize="21sp"
            android:textColor="@color/white" />
        
       </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="Encryption"
            android:textSize="21sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/encryption_mode"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="0.96"
            android:text="Hash Function"
            android:textSize="15sp"
            android:textColor="@color/white" />
        
       </LinearLayout>
     

      <TextView
          android:layout_width="match_parent"
          android:layout_height="20sp"
          android:text="binary data after encoding "
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/white"
          android:textSize="10sp" />

        <TextView
            android:id="@+id/dataTransmision"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="10sp" />
        
        <ListView android:id="@+id/listKey" 
                  android:layout_width="fill_parent"
                  android:layout_height="150dp" 
                  style ="@style/ListFont" 
                  android:divider="#ffffff"
                  android:dividerHeight="4px"
                  />

      <RadioGroup
        		    android:id="@+id/main_radio"
        		    android:layout_width="fill_parent"
        		    android:layout_height="50dp"
        		    android:layout_gravity="bottom"
        		    android:gravity="center_vertical"
        		    android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnSend"
                style="@style/main_tab_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:src="@drawable/ic_action_play" />

            <ImageButton
                android:id="@+id/btnCancel"
                style="@style/main_tab_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:src="@drawable/ic_action_pause" />

            <ImageButton
                android:id="@+id/btntest"
                style="@style/main_tab_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:src="@drawable/ic_action_replay" />

       </RadioGroup>
    </LinearLayout>

</RelativeLayout>
