<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Function setting">

        <CheckBoxPreference
                android:key="checkbox_preference"
                android:title="Torch mode"
                android:summary="Enable torch mode together with key" />
        <CheckBoxPreference
                android:key="lock_screen"
                android:title="Disable lock"
                android:summary="Do not lock screen after launching app" />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Security setting">
        
        <CheckBoxPreference
                android:key="lock_app"
                android:title="Enable password for app"
                android:summary="password for launching app" />

        <EditTextPreference
                android:key="edittext_preference"
                android:title="passwordForApp"
                android:summary="please input the password for launching your app"
                android:dialogTitle="password input" />

    </PreferenceCategory>
    

</PreferenceScreen>